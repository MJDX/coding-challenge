datasource db {
  provider = "postgresql"
  url      = "postgresql://foxbase:foxbaseRoot@localhost:5432/foxbase"
}

generator client {
  provider = "prisma-client-js"
}

model Questionnaire {
  id Int @id @default(autoincrement())
  title String
  questionnaireName String  @unique
  questionPages QuestionPage[]
  resultPage Json
}
model QuestionPage {
  id Int @id @default(autoincrement())
  title String
  pageName String  @unique
  pageType String
  content Json
  questionnaire Questionnaire @relation(fields: [questionnaireId], references: [id])
  questionnaireId Int
  answer Answer?
}

model Answer {
  id Int @id @default(autoincrement())
  value String
  questionPage QuestionPage @relation(fields: [questionPageId], references: [id])
  questionPageId Int @unique
}

